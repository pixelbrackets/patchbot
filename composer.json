{
    "name": "pixelbrackets/patchbot",
    "description": "Automate the distribution of patches to various Git repositories",
    "type": "library",
    "license": "GPL-2.0-or-later",
    "require": {
        "php": "^8.3",
        "consolidation/robo": "^4.0 || ^5.0",
        "jean85/pretty-package-versions": "^2.0",
        "cocur/slugify": "^4.0",
        "cweagans/composer-patches": "~1.0"
    },
    "autoload": {
        "psr-4": {
            "Pixelbrackets\\Patchbot\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0"
    },
    "scripts": {
        "test": [
            "phpunit tests/unit/"
        ]
    },
    "bin": [
        "bin/patchbot"
    ],
    "config": {
        "allow-plugins": {
            "cweagans/composer-patches": true
        }
    },
    "extra": {
        "patches": {
            "consolidation/robo": {
                "Symfony Console 7.4 compatibility": "https://patch-diff.githubusercontent.com/raw/consolidation/robo/pull/1185.diff"
            }
        }
    }
}
